<Window x:Class="ArmaBrowser.MainWindow"  x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:ArmaBrowser.ViewModel"
        xmlns:views="clr-namespace:ArmaBrowser.Views"
         xmlns:view="clr-namespace:ArmaBrowser.Views.View"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ComponentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:Data="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
        xmlns:Shader="clr-namespace:ArmaBrowser.Shader"
        xmlns:WStyle="clr-namespace:ArmaBrowser.Styles"
        
        Title="ARMA III Browser (Community Project by Tackle mail@armabrowser.org)" 
        Height="693" Width="1023" MinWidth="660" MinHeight="600"
        UseLayoutRounding="False"
        Foreground="White"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        Closing="Window_Closing"
        Loaded="ServerListControl_Loaded"
        Icon="/Img/ArmaBrowser32.png"
        Style="{StaticResource VS2012WindowStyle}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>


    </Window.Resources>

    <Window.DataContext>
        <viewModel:ServerListViewModel x:Name="MyViewModel" />
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="Open" CanExecute="OpenCommandBinding_CanExecute" Executed="OpenCommandBinding_Executed"/>
    </Window.CommandBindings>
    <Grid Background="{StaticResource BackroundNormalBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid MouseDown="TitleBar_MouseDown" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Visibility="Collapsed">

            <FrameworkElement.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource CloseButton}">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#66FFFF00"/>
                            <Setter Property="Background" Value="#33FFFF00"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </FrameworkElement.Resources>
            <FrameworkElement.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"  Value="#FF313131"/>
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </FrameworkElement.Style>
            <!--Style="{DynamicResource CloseButton}"-->
            <Button Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,6,1,0" 
    		         
    		        Height="17" Width="22" ClickMode="Release" Click="CloseButton_Click" 
    		        Panel.ZIndex="10000">
                <Viewbox Height="17" Width="22" SnapsToDevicePixels="True" >
                    <Canvas Width="51" Height="51" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                        <Path Width="31.6666" Height="31.6667" Canvas.Left="10.1666" Canvas.Top="10.1667" Stretch="Fill" 
                              Fill="White" Data="F1 M 26.9166,22.1667L 37.9999,33.25L 49.0832,22.1668L 53.8332,26.9168L 42.7499,38L 53.8332,49.0834L 49.0833,53.8334L 37.9999,42.75L 26.9166,53.8334L 22.1666,49.0833L 33.25,38L 22.1667,26.9167L 26.9166,22.1667 Z "
                               />
                    </Canvas>
                </Viewbox>
            </Button>
            <Button Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right"  Margin="0,6,30,0" 
    		      
    		        Height="17" Width="22" ClickMode="Release" Click="MinimizeButton_Click">
                <Viewbox Height="17" Width="22" SnapsToDevicePixels="True" >
                    <Canvas  Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                        <Rectangle Height="8.8885" Width="66.457"  Fill="White" Canvas.Top="52.9" Canvas.Left="5" >

                        </Rectangle>
                    </Canvas>
                </Viewbox>
            </Button>

            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,10,0" Height="25" Width="75"
                     IsHitTestVisible="False">
                <Canvas AutomationProperties.Name="AACLIP" Width="500" Height="200" >
